<%= simple_form_for @app_sync_report, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :subtitle %>
  <% if admin? %>
    <%= f.input :trigger_refresh, :hint => "if necessary, trigger a refresh of stratus local database" %>
  <% end %>
  <%= f.association :standard_environment %>
  <%= f.association :target_environment %>
  <%= f.input :header %>
  <%= f.input :body %>
  <%= f.input :footer %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                app_sync_reports_path, :class => 'btn' %>
  </div>
<% end %>
