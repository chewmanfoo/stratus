<%= simple_form_for @useful_link, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :active %>
  <%= f.input :url %>
  <%= f.association :icon, :input_html => { :style => "width:221px" } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                useful_links_path, :class => 'btn' %>
  </div>
<% end %>
