<%- model_class = ServerSyncJob -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:workflow_state) %></th>
      <th><%= model_class.human_attribute_name(:exceptions) %></th>
      <th><%= model_class.human_attribute_name(:started_at) %></th>
      <th><%= model_class.human_attribute_name(:started_by) %></th>
      <th><%= model_class.human_attribute_name(:completed_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @server_sync_jobs.each do |server_sync_job| %>
      <tr>
        <td><%= server_sync_job.workflow_state %></td>
        <td><%= server_sync_job.exceptions %></td>
        <td><%= server_sync_job.started_at %></td>
        <td><%= server_sync_job.started_by %></td>
        <td><%= server_sync_job.completed_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_server_sync_job_path(server_sync_job), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      server_sync_job_path(server_sync_job),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_server_sync_job_path,
            :class => 'btn btn-primary' %>
