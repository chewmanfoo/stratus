<%= form_tag searcher_index_path, :method => 'get', :class => "form-search" do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], :class => "span2 search-query", :type => "text", :placeholder => "Search" %>
    <%= submit_tag "Search", :name => nil, :class => "btn" %>
  </div>
<% end %>
