<%- model_class = Chore -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:command) %></th>
      <th><%= model_class.human_attribute_name(:success) %></th>
      <th><%= model_class.human_attribute_name(:fail) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @chores.each do |chore| %>
      <tr>
        <td><%= link_to chore.name, chore_path(chore) %><br /><sup><%=l chore.created_at %></sup></td>
        <td><tt><%= chore.command %></tt></td>
        <td><%= chore.success %></td>
        <td><%= chore.fail %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_chore_path(chore), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      chore_path(chore),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_chore_path,
            :class => 'btn btn-primary' %>
