<h1>Listing retries</h1>

<table>
  <tr>
    <th>Workflow state</th>
    <th>Deployment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @retries.each do |retry| %>
  <tr>
    <td><%= retry.workflow_state %></td>
    <td><%= retry.deployment %></td>
    <td><%= link_to 'Show', retry %></td>
    <td><%= link_to 'Edit', edit_retry_path(retry) %></td>
    <td><%= link_to 'Destroy', retry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Retry', new_retry_path %>
