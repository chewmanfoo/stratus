<%= simple_form_for @mail_recipient, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :addresses, :hint => "A semicolon-delimited list of email addresses.  Internal only, please.  In addition to this list, an email will always be sent to 'developerservices@sabre.com' for Deployments." %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mail_recipients_path, :class => 'btn' %>
  </div>
<% end %>
