<h1>Searcher</h1>

<h2>Applications</h2>
<% unless @applications.blank? %>
<table class="table table-striped">
  <thead>
  </thead>
  <tbody>
    <% @applications.each do |a| %>
      <tr><td><%= link_to a.name, a %></td></tr>
    <% end %>
  </tbody>
</table>
<% end %>
<div class="form-actions">
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_application_path,
            :class => 'btn btn-primary' %>
</div>

<h2>Servers</h2>
<% unless @servers.blank? %>
<table class="table table-striped">
  <thead>
  </thead>
  <tbody>
    <% @servers.each do |s| %>
      <tr><td><%= link_to s.name, s %></td></tr>
    <% end %>
  </tbody>
</table>
<% end %>
<div class="form-actions">
  <%= link_to t('.new', :default => t("helpers.links.new")),
