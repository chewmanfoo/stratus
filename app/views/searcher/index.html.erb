<h2>Roles</h2>
<% unless @roles.blank? %>
<table class="table table-striped">
  <thead>
  </thead>
  <tbody>
    <% @roles.each do |r| %>
      <tr><td><%= link_to r.name, r %></td></tr>
    <% end %>
  </tbody>
</table>
<% end %>
<div class="form-actions">
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_role_path,
            :class => 'btn btn-primary' %>
</div>

<% unless @deployments.blank? %>
<h2>Deployments</h2>
<table class="table table-condensed table-striped">
  <thead>
    <tr><th>Name</th><th>Created</th><th>Started</th></tr>
  </thead>
  <tbody>
    <% @deployments.sort_by(&:created_at).reverse.each do |d| %>
      <tr><td><%= link_to d.name, d %></td><td><%= d.created_at.to_s(:pretty) %></td><td><%= d.started_at.to_s(:pretty) if d.started_at %></td></tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% unless @switches.blank? %>
<h2>Switches</h2>
