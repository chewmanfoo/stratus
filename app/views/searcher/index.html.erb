</div>

<h2>Environments</h2>
<% unless @environments.blank? %>
<table class="table table-striped">
  <thead>
  </thead>
  <tbody>
    <% @environments.each do |e| %>
      <tr><td><%= link_to e.name, e %></td></tr>
    <% end %>
  </tbody>
</table>
<% end %>
<div class="form-actions">
  <%= link_to t('.new', :default => t("helpers.links.new")),
