  <thead>
    <tr><th>Name</th><th>Created</th><th>Started</th></tr>
  </thead>
  <tbody>
    <% @switches.sort_by(&:created_at).reverse.each do |s| %>
      <tr><td><%= link_to s.name, s %></td><td><%= s.created_at.to_s(:pretty) %></td><td><%= s.started_at.to_s(:pretty) if s.started_at %></td></tr>
    <% end %>
  </tbody>
</table>
<% end %>
